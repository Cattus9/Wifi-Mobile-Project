<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- ===== PERMISSIONS ===== -->
    <!-- Internet dibutuhkan untuk akses API Supabase -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Opsional: cek status koneksi sebelum request (misal tampilkan “No Connection”) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Opsional: jika kamu ingin mendeteksi perubahan jaringan -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:forceDarkAllowed="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">
        <!--
         Jika nanti butuh akses http (cleartext), aktifkan ini:
        android:usesCleartextTraffic="true"
        dan buat file network_security_config.xml di res/xml.
        Namun Supabase sudah HTTPS jadi tidak perlu.
        -->
        <!-- ===== ACTIVITIES ===== -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".DashboardActivity"
            android:exported="false" />
    </application>

</manifest>