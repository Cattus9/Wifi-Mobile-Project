<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
    <shape >
        <!-- Gradasi biru lembut agar konsisten dengan tema lain -->
        <gradient
            android:type="linear"
            android:angle="135"
            android:startColor="#2FB5ED"
            android:endColor="#1A9BD6" />

        <!-- Sudut melengkung -->
        <corners android:radius="16dp" />

        <!-- Sedikit bayangan -->
        <padding android:bottom="6dp" android:top="6dp" />
    </shape>
    </item>

</selector>
