<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_primary"
    tools:context=".util.DetailPaketFragment">

    <!-- AppBar dengan CollapsingToolbarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/register_primary"
        android:fitsSystemWindows="true"
        app:elevation="4dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/register_primary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/register_primary"
            app:titleEnabled="false">

            <!-- Title Section yang akan collapse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="?attr/actionBarSize"
                android:paddingBottom="16dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.9"
                    android:text="Informasi lengkap paket yang Anda pilih"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Toolbar yang akan tetap terlihat (pinned) -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:title="Detail Paket"
                app:titleTextColor="@android:color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_rounded_top"
            android:padding="16dp"
            android:paddingBottom="100dp">

            <!-- Main Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMainInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_gradient_blue_light">

                    <!-- Badge Row -->
                    <LinearLayout
                        android:id="@+id/badgeRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Badge Populer -->
                        <TextView
                            android:id="@+id/tvBadgePopuler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge_populer"
                            android:text="â­ POPULER"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:visibility="gone" />

                        <!-- Badge Duration -->
                        <TextView
                            android:id="@+id/tvBadgeDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge_duration"
                            android:text="30 Hari"
                            android:textColor="@color/register_primary"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Nama Paket -->
                    <TextView
                        android:id="@+id/tvPaketName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic 20 Mbps"
                        android:textColor="#1565C0"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Deskripsi -->
                    <TextView
                        android:id="@+id/tvPaketDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20 Mbps â€¢ Paket entry level"
                        android:textColor="#1976D2"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Price Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Current Price -->
                        <TextView
                            android:id="@+id/tvPriceCurrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp150.000"
                            android:textColor="#1565C0"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <!-- Original Price (Strikethrough) -->
                        <TextView
                            android:id="@+id/tvPriceOriginal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp170.000"
                            android:textColor="#90A4AE"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp"
                            android:visibility="gone" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section Title: Benefit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benefit Paket"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_section_indicator"
                android:drawablePadding="8dp" />

            <!-- Benefit List Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:id="@+id/benefitContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Benefit Item: Speed -->
                    <LinearLayout
                        android:id="@+id/benefitSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kecepatan"
                            android:textColor="#616161"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvSpeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Mbps"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Benefit Item: Duration -->
                    <LinearLayout
                        android:id="@+id/benefitDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="â±ï¸"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Masa Aktif"
                            android:textColor="#616161"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvDurationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 Hari"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0" />

                    <!-- Benefit Item: Quota -->
                    <LinearLayout
                        android:id="@+id/benefitQuota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“±"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kuota Total"
                            android:textColor="#616161"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvQuotaValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unlimited"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/dividerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:visibility="gone" />

                    <!-- Benefit Item: Phone (Optional) -->
                    <LinearLayout
                        android:id="@+id/benefitPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ž"
                            android:textSize="20sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Telepon"
                            android:textColor="#616161"
                            android:textSize="14sp"
                            android:layout_marginStart="12dp" />

                        <TextView
                            android:id="@+id/tvPhoneValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100 Menit"
                            android:textColor="#212121"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section Title: Deskripsi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:drawableStart="@drawable/ic_section_indicator"
                android:drawablePadding="8dp" />

            <!-- Description Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_gradient_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Paket"
                            android:textColor="#1565C0"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paket internet rumah dengan kecepatan optimal untuk kebutuhan sehari-hari."
                        android:textColor="#424242"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.6" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Syarat & Ketentuan (Expandable) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFF9E6">

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/termsHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš ï¸"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Syarat &amp; Ketentuan"
                            android:textColor="#F57C00"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/termsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¼"
                            android:textColor="#F57C00"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Content -->
                    <View
                        android:id="@+id/termsDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFE082"
                        android:layout_marginHorizontal="16dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/termsContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:paddingTop="12dp"
                        android:textColor="#5D4037"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.6"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ (Expandable) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#E3F2FD">

                    <!-- Header -->
                    <LinearLayout
                        android:id="@+id/faqHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â“"
                            android:textSize="20sp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="FAQ"
                            android:textColor="#1565C0"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/faqIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â–¼"
                            android:textColor="#1565C0"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Content -->
                    <View
                        android:id="@+id/faqDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#90CAF9"
                        android:layout_marginHorizontal="16dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/faqContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:paddingTop="12dp"
                        android:textColor="#1565C0"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.6"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#757575"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp150.000"
                android:textColor="#212121"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="@drawable/bg_button_buy"
            android:paddingHorizontal="40dp"
            android:text="Beli"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="#009BFD"
            app:cornerRadius="26dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>