<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile_background"
    android:fillViewport="true"
    tools:context=".ui.account.AkunFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/akunTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Profile Saya"
            android:textAlignment="center"
            android:textColor="@color/fragmentColor"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profileCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="101dp"
            android:background="@drawable/fragment_card"
            android:paddingStart="20dp"
            android:paddingTop="52dp"
            android:paddingEnd="20dp"
            android:paddingBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/akunTitle">

            <LinearLayout
                android:id="@+id/profileInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Nama Pengguna"
                    android:textColor="@color/clrTextPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/poppins"
                    android:text="user.email@example.com"
                    android:textColor="@color/clrTextSecondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileSectionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/poppins"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileInfo">

                <LinearLayout
                    android:id="@+id/cardIdentitasPaket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_card_profil"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iconIdentitasPaket"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_profile_icon_circle"
                            android:backgroundTint="@color/profile_icon_bg_primary"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:padding="8dp"
                            android:src="@drawable/ic_wifi_tethering_24px"
                            app:tint="@color/register_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textTitleIdentitasPaket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Identitas Paket"
                                android:textColor="@color/clrTextPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textSubtitleIdentitasPaket"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:text="Unlimited Fiber 50 Mbps"
                                android:textColor="@color/clrTextSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeStatusPaket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_profile_badge"
                            android:fontFamily="@font/poppins"
                            android:text="Aktif"
                            android:textColor="@color/profile_badge_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:text="Tagihan berikutnya: 12 Des 2024"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="Status: Aktif • ID Paket FBR-0021"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonChangePackage"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Ubah Paket"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_wifi_tethering_24px"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/register_primary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardIdentitasPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_card_profil"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iconIdentitasPengguna"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_profile_icon_circle"
                            android:backgroundTint="@color/profile_icon_bg_secondary"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:padding="8dp"
                            android:src="@drawable/ic_person_24px"
                            app:tint="@color/profile_badge_text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textTitleIdentitasPengguna"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Identitas Pengguna"
                                android:textColor="@color/clrTextPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textSubtitleIdentitasPengguna"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:text="user.email@example.com"
                                android:textColor="@color/clrTextSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeCustomerId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_profile_badge"
                            android:backgroundTint="@color/profile_icon_bg_secondary"
                            android:fontFamily="@font/poppins"
                            android:text="#88920123"
                            android:textColor="@color/profile_badge_text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:text="Nama: Nama Pengguna"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="Email: user.email@example.com"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="No. Telp: 0812-3456-7890"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonEditProfile"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Edit Profil"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_person_24px"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/profile_badge_text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardLayananBantuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_card_profil"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iconLayananBantuan"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_profile_icon_circle"
                            android:backgroundTint="@color/profile_icon_bg_support"
                            android:contentDescription="@null"
                            android:importantForAccessibility="no"
                            android:padding="8dp"
                            android:src="@drawable/ic_support_agent_24px"
                            app:tint="@color/profile_badge_text_support" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textTitleLayananBantuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins"
                                android:text="Layanan Bantuan"
                                android:textColor="@color/clrTextPrimary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textSubtitleLayananBantuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins"
                                android:text="Pantau status permintaan bantuan"
                                android:textColor="@color/clrTextSecondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeActiveTickets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_profile_badge"
                            android:backgroundTint="@color/profile_icon_bg_support"
                            android:fontFamily="@font/poppins"
                            android:text="2 aktif"
                            android:textColor="@color/profile_badge_text_support"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins"
                        android:text="Terakhir diperbarui: 24 Okt 2024 • SLA 24 jam"
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins"
                        android:text="Pantau status permintaan bantuan dan tiket layanan Anda."
                        android:textColor="@color/clrTextSecondary"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonTicketStatus"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Lihat Status Tiket"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_support_agent_24px"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="@color/profile_badge_text_support" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogout"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:backgroundTint="@color/logout_button_background"
                    android:fontFamily="@font/poppins"
                    android:minHeight="56dp"
                    android:text="Logout"
                    android:textAllCaps="false"
                    android:textColor="@color/logout_button_text"
                    android:textStyle="bold"
                    app:cornerRadius="14dp"
                    app:icon="@drawable/ic_logout_24px"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@color/logout_button_text" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:background="@drawable/bg_profile_placeholder"
            android:contentDescription="@string/akun_profile_photo_desc"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_user"
            android:translationY="-70dp"
            app:layout_constraintEnd_toEndOf="@id/profileCard"
            app:layout_constraintStart_toStartOf="@id/profileCard"
            app:layout_constraintTop_toTopOf="@id/profileCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
