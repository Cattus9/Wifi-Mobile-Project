<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/clrTextSecondary"
    app:checkedIcon="@null"
    app:checkedIconMargin="0dp"
    app:checkedIconSize="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket Nama"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/clrTextPrimary"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/textActiveStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="PAKET AKTIF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@color/register_primary"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:fontFamily="@font/poppins"
                    android:visibility="gone" />
            </LinearLayout>

            <RadioButton
                android:id="@+id/radioSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/textPackageDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Kecepatan / detail"
            android:textSize="14sp"
            android:textColor="@color/clrTextSecondary"
            android:fontFamily="@font/poppins" />

        <TextView
            android:id="@+id/textPackagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rp 0"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/register_primary"
            android:fontFamily="@font/poppins" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
