<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="@color/clrAccent"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/bg_package_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvItemPaketName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/clrTextPrimary"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Badge POPULER - Tidak akan muncul jika tidak populer -->
            <TextView
                android:id="@+id/tvItemBadgePopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_populer"
                android:text="POPULER"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:gravity="center"
                android:layout_marginStart="6dp"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="2dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvItemPaketDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clrTextSecondary"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvItemPaketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/clrAccent"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>